@{
    ViewData["Title"] = "Calculate Grade";
}

@model GradeModel;
<!-- Grade Calculator form-->
<section class="py-5">
    <div class="container px-5">
        <div class="bg-light rounded-3 py-5 px-4 px-md-5 mb-5">
            <div class="text-center mb-5">
                <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3"><i class="bi bi-envelope"></i></div>
                <h1 class="fw-bolder">Grade Calculator</h1>
                <p class="lead fw-normal text-muted mb-0">Enter in your grade percentages and calculate your final grade</p>
            </div>
            <div class="row gx-5 justify-content-center">
                <div class="col-lg-8 col-xl-6">

                    <form class="row g-3" method="post">
                        <div class="col-12">
                            <label class="form-label">Assignments</label>
                            <input id="assignments" class="form-control" type="number" asp-for="assignments" />
                        </div>
                        <div class="col-12">
                            <label class="form-label">Group Project</label>
                            <input id="group_project" class="form-control" type="number" asp-for="group_project" />
                        </div>
                        <div class="col-12">
                            <label class="form-label">Quizzes</label>
                            <input id="quizzes" class="form-control" type="number" asp-for="quizzes" />
                        </div>
                        <div class="col-12">
                            <label>INTEX</label>
                            <input id="intex" class="form-control" type="number" asp-for="intex" />
                        </div>

                        <div class="d-grid">
                            <input id="calculate" class="btn btn-primary btn-lg" type="submit" value="Calculate" />
                        </div>

                        <div asp-validation-summary="All">

                        </div>
                    </form>
                    @ViewBag.Output
                </div>
            </div>
        </div>
    </div>
</section>


